{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./src",
    "paths": {
      "@models/*": ["db/mongo/models/*"],
      "@utils/*": ["utils/*"],
      "@middlewares/*": ["middlewares/*"],
      "@modules/*": ["modules/*"],
      "@core/*": ["core/*"],
      "@customTypes/*": ["types/*"]
    },
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "typeRoots": ["./node_modules/@types", "./types/express.d.ts"]
  },
  "include": [
    "src/**/*.ts",
    "src/types/**/*.d.ts",
    "src/controllers/registerController.js",
    "src/routes/registerRoutes.ts"
  ],
  "exclude": ["node_modules"]
}
